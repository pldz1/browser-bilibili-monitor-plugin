{
  "manifest_version": 3,
  "name": "Check Media Playback",
  "version": "1.0.1",
  "permissions": ["tabs", "scripting", "activeTab", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
