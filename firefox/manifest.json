{
  "manifest_version": 2,
  "name": "Check Media Playback",
  "version": "1.0.0",
  "permissions": ["tabs", "activeTab", "storage", "<all_urls>"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
